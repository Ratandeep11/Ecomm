<%- include("../header") %>

<main class="container my-5">
  <style>
    body {
      /* padding-top: 56px; */
    }

    .btn-create {
      margin-bottom: 20px;
    }

    .table {
      width: 100%;
      margin-bottom: 1rem;
      background-color: transparent;
      border-collapse: collapse;
    }

    .table th,
    .table td {
      padding: 0.75rem;
      vertical-align: top;
      border-top: 1px solid #dee2e6;
    }

    .table thead th {
      vertical-align: bottom;
      border-bottom: 2px solid #dee2e6;
    }

    .table tbody + tbody {
      border-top: 2px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
      background-color: rgba(0, 0, 0, 0.05);
    }

    .table-hover tbody tr:hover {
      background-color: rgba(0, 0, 0, 0.075);
    }

    .btn-actions a {
      color: #007bff;
      margin-right: 10px;
      text-decoration: none;
      transition: color 0.3s ease-in-out;
    }

    .btn-actions a:hover {
      color: #0056b3;
    }
  </style>

  <a href="/products/create" class="btn btn-primary btn-create">Create</a>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach((item) => { %>
      <tr>
        <td><img src="<%= item.image %>" width="100" height="100" /></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td class="btn-actions">
          <a href="/products/ShowProduct/<%= item._id %>">View</a>
          <a href="/products/EditProduct/<%= item._id %>">Edit</a>
          <a href="/products/delete/<%= item._id %>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include("../footer") %>
